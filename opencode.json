{
  "project": {
    "name": "my-text",
    "rootPath": "C:\\Users\\Administrator\\Desktop\\my-text",
    "type": "python"
  },
  "lsp": {
    "servers": {
      "pylsp": {
        "command": "pylsp",
        "enabled": true,
        "filetypes": ["python"],
        "settings": {
          "plugins": {
            "pycodestyle": {
              "enabled": true,
              "maxLineLength": 120
            },
            "pyflakes": {
              "enabled": true
            },
            "mccabe": {
              "enabled": true,
              "threshold": 15
            },
            "pydocstyle": {
              "enabled": true,
              "convention": "pep257"
            },
            "jedi_completion": {
              "enabled": true,
              "include_params": true,
              "fuzzy": true
            },
            "jedi_definition": {
              "enabled": true,
              "follow_imports": true,
              "follow_builtin_imports": true
            },
            "jedi_hover": {
              "enabled": true
            },
            "jedi_references": {
              "enabled": true
            },
            "jedi_signature_help": {
              "enabled": true
            },
            "jedi_symbols": {
              "enabled": true,
              "all_scopes": true
            },
            "rope_completion": {
              "enabled": false
            },
            "autopep8": {
              "enabled": false
            },
            "yapf": {
              "enabled": false
            },
            "black": {
              "enabled": false
            }
          }
        }
      }
    }
  },
  "features": {
    "completion": {
      "enabled": true,
      "triggerKind": ["triggerCharacter", "triggerForIncompleteCompletions"],
      "triggerCharacters": [".", "(", "[", "\"", "'"]
    },
    "definition": {
      "enabled": true,
      "linkSupport": true
    },
    "hover": {
      "enabled": true,
      "contentFormat": ["markdown", "plaintext"]
    },
    "documentSymbol": {
      "enabled": true,
      "hierarchicalDocumentSymbolSupport": true
    },
    "workspaceSymbol": {
      "enabled": true
    },
    "diagnostics": {
      "enabled": true,
      "realtime": true,
      "severity": {
        "error": "error",
        "warning": "warning",
        "information": "info",
        "hint": "hint"
      }
    },
    "codeAction": {
      "enabled": true,
      "codeActionLiteralSupport": {
        "codeActionKind": {
          "valueSet": ["quickfix", "refactor", "refactor.extract", "refactor.inline", "refactor.rewrite", "source", "source.organizeImports"]
        }
      }
    },
    "codeLens": {
      "enabled": false
    },
    "formatting": {
      "enabled": false
    },
    "signatureHelp": {
      "enabled": true,
      "triggerCharacters": ["(", ",", "="]
    }
  },
  "workspace": {
    "folders": [
      {
        "name": "root",
        "path": "."
      },
      {
        "name": "backend",
        "path": "backend"
      },
      {
        "name": "frontend",
        "path": "frontend"
      },
      {
        "name": "src",
        "path": "src"
      }
    ],
    "excludePatterns": [
      "**/.git",
      "**/.vscode",
      "**/__pycache__",
      "**/*.pyc",
      "**/node_modules",
      "**/venv",
      "**/.venv",
      "**/*.egg-info",
      "**/dist",
      "**/build"
    ]
  },
  "python": {
    "pythonPath": "C:\\Users\\Administrator\\Desktop\\my-text\\my_clean_venv\\Scripts\\python.exe",
    "venvPath": "C:\\Users\\Administrator\\Desktop\\my-text",
    "venvName": "my_clean_venv",
    "analysis": {
      "autoSearchPaths": true,
      "useLibraryCodeForTypes": true,
      "extraPaths": [
        "C:\\Users\\Administrator\\Desktop\\my-text\\src"
      ]
    },
    "linting": {
      "enabled": true,
      "flake8Enabled": false,
      "mypyEnabled": false,
      "pylintEnabled": false
    },
    "formatting": {
      "provider": "none"
    },
    "testing": {
      "pytestEnabled": false,
      "pytestArgs": []
    }
  },
  "opcodeIntegration": {
    "enabled": true,
    "contextAwareness": {
      "enabled": true,
      "includeSymbols": true,
      "includeDependencies": true,
      "includeFileStructure": true
    },
    "codebaseNavigation": {
      "enabled": true,
      "followImports": true,
      "resolveReferences": true
    },
    "queryHandling": {
      "enabled": true,
      "resolveDefinitions": true,
      "provideExamples": true,
      "explainCode": true
    }
  }
}
